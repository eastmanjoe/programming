ConstTable(NETWORK_SETTINGS)
  Const CHANGE_NETWORK_SETTINGS = FALSE
  Const IP_ADDRESS = ""
  Const NETMASK = ""
  Const GATEWAY = ""
  Const DNS1_ADDRESS = "8.8.8.8"
  Const DNS2_ADDRESS = ""
EndConstTable

