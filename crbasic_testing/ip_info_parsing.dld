'## Declarations ################################
Const SP = Chr(32)
Const TB = Chr(9)
Const CR = Chr(13)
Const LF = Chr(10)
Const CRLF = CR & LF

Public pnl_logger_network_settings(6) As String * 24
Alias pnl_logger_network_settings = pnl_datalogger_mac, pnl_logger_ip, pnl_logger_netmask, pnl_logger_gateway, pnl_logger_dns1, pnl_logger_dns2

